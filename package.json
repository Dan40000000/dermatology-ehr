{
  "name": "derm-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\"",
    "test": "npm run test --prefix backend && npm run test --prefix frontend",
    "test:e2e": "playwright test --config=e2e/playwright.config.ts --project=chromium",
    "test:e2e:all": "playwright test --config=e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config=e2e/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test --config=e2e/playwright.config.ts --headed --project=chromium",
    "test:e2e:debug": "playwright test --config=e2e/playwright.config.ts --debug",
    "test:e2e:chrome": "playwright test --config=e2e/playwright.config.ts --project=chromium",
    "test:e2e:firefox": "playwright test --config=e2e/playwright.config.ts --project=firefox",
    "test:e2e:webkit": "playwright test --config=e2e/playwright.config.ts --project=webkit",
    "test:e2e:mobile": "playwright test --config=e2e/playwright.config.ts --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:auth": "playwright test --config=e2e/playwright.config.ts auth-comprehensive --project=chromium",
    "test:e2e:patients": "playwright test --config=e2e/playwright.config.ts patient-management --project=chromium",
    "test:e2e:appointments": "playwright test --config=e2e/playwright.config.ts appointments --project=chromium",
    "test:e2e:clinical": "playwright test --config=e2e/playwright.config.ts clinical-workflows --project=chromium",
    "test:e2e:admin": "playwright test --config=e2e/playwright.config.ts admin --project=chromium",
    "test:e2e:smoke": "PLAYWRIGHT_MOCK_AUTH=1 PLAYWRIGHT_MOCK_DATA=1 playwright test --config=e2e/playwright.config.ts smoke --project=chromium",
    "test:release-gate": "npm run lint --prefix backend && npm run test --prefix backend && cd frontend && npx tsc --noEmit && cd .. && npm run test --prefix frontend -- --run && npm run build --prefix frontend && npm run test:e2e:smoke",
    "hipaa:staging-readiness": "npm run staging:readiness --prefix backend --",
    "hipaa:staging-readiness:strict": "npm run staging:readiness:strict --prefix backend --",
    "hipaa:staging-readiness:strict-warnings": "npm run staging:readiness:strict-warnings --prefix backend --",
    "integrations:smoke": "npm run integrations:smoke --prefix backend --",
    "integrations:smoke:strict": "npm run integrations:smoke:strict --prefix backend --",
    "integrations:smoke:strict-warnings": "npm run integrations:smoke:strict-warnings --prefix backend --",
    "ambient:staging:flow": "npm run ambient:staging:flow --prefix backend --",
    "ambient:staging:soak": "npm run ambient:staging:soak --prefix backend --",
    "test:e2e:report": "playwright show-report e2e/playwright-report",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "npm run test && npm run test:e2e:all",
    "playwright:install": "playwright install --with-deps",
    "playwright:codegen": "playwright codegen http://localhost:5173",
    "build": "npm run build --prefix backend && npm run build --prefix frontend"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "concurrently": "^9.0.1"
  }
}
